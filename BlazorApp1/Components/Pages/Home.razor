@page "/home"
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Http
@inject NavigationManager Navigation
@inject IHttpContextAccessor HttpContextAccessor

<PageTitle>Home</PageTitle>

<style>
    .hero-section {
        background: url('images/cutie.png') no-repeat center center;
        background-size: cover;
        height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: white;
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7);
    }
</style>

<div class="hero-section">
    <h1 style="position: absolute; bottom:0px;">
        Welcome to the Online Employee Clearance System
    </h1>

    @rendermode InteractiveServer

    @if (HttpContextAccessor.HttpContext?.User?.Identity?.IsAuthenticated ?? false)
    {
        <p>Welcome, @HttpContextAccessor.HttpContext.User.Identity.Name!</p>
        <p></p>
        <a href="/logout">Logout</a>
    }
    else
    {
        <a href="/login">Login with Google</a>
    }
</div>
